{
  "name": "code-craft",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "concurrently \"turbo dev\" \"yarn dev:python\" \"yarn dev:celery\"",
    "dev:python": "cd apps/executor && source venv/bin/activate && uvicorn main:app --reload",
    "dev:celery": "cd apps/executor && source venv/bin/activate && celery -A code.celery_app worker --loglevel=info",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "concurrently": "^9.1.2"
  }
}
